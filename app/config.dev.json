{
  "listeners": [
    {
      "address": "0.0.0.0",
      "port": 8070,
      "https": false
    }
  ],
  "threads_num": 4,
  "run_as_daemon": false,
  "document_root": "./public",
  "plugins": [
    {
      "name": "hydra::HydraSsrPlugin",
      "dependencies": [],
      "config": {
        "asset_mode": "dev",
        "css_obfuscation": {
          "enabled": false,
          "emit_classmap": true
        },
        "ssr_bundle_path": "./public/assets/ssr-bundle.js",
        "asset_manifest_path": "./public/assets/manifest.json",
        "asset_public_prefix": "/assets",
        "client_manifest_entry": "src/entry-client.tsx",
        "pool_size": 4,
        "acquire_timeout_ms": 200,
        "render_timeout_ms": 50,
        "i18n": {
          "defaultLocale": "en",
          "supportedLocales": ["en", "fr", "ko"],
          "queryParam": "lang",
          "cookieName": "hydra_lang",
          "includeLocaleCandidates": true
        },
        "request_context": {
          "include_cookies": true,
          "includeCookieMap": true,
          "allowed_cookies": ["hydra_user"]
        },
        "log_render_metrics": true,
        "wrap_fragment": true,
        "api_bridge_enabled": true,
        "dev_mode": {
          "enabled": true,
          "proxy_assets": false,
          "inject_hmr_client": true,
          "vite_origin": "http://127.0.0.1:5174",
          "css_path": "/src/styles.css",
          "client_entry_path": "/src/entry-client.tsx",
          "hmr_client_path": "/@vite/client",
          "proxy_timeout_sec": 10.0,
          "auto_reload": true,
          "reload_probe_path": "/__hydra/test",
          "reload_interval_ms": 1000
        }
      }
    }
  ]
}
